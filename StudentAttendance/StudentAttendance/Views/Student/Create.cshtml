@model StudentAttendance.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="StudentName" class="control-label"></label>
            <input asp-for="StudentName" class="form-control" />
            <span asp-validation-for="StudentName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnrollmentNumber" class="control-label"></label>
            <input asp-for="EnrollmentNumber" class="form-control" />
            <span asp-validation-for="EnrollmentNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
